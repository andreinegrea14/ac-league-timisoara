@model IEnumerable<Injection.Models.ProductCategory>

@{
    ViewData["Title"] = "Product Categories Page";
}

<h1>List of products</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name,"Products","ProductsCategory",new {productCategory = item.CategoryId})
            </td>
        </tr>
}
    </tbody>
</table>

